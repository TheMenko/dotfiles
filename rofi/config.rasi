configuration {
  display-drun: "Applications";
  display-window: "Windows";
  drun-display-format: "{name}";
  font: "Fira Sans SemiBold 11";
  modi: "run,drun";
}

/* Dark theme. */
@theme "./colors-rofi.rasi"

window {
  width:700px;
}

element {
  padding:6;
}

element-text selected {
  text-color:@background;
}

prompt {
  text-color:#ffffff;
}

entry {
  text-color:#ffffff;
}

